{
  "name": "git-tracked-explorer",
  "displayName": "Git Tracked Explorer",
  "description": "Show only git-tracked files in VS Code explorer",
  "version": "1.0.0",
  "publisher": "chatoo2412",
  "author": {
    "name": "Jun Wooram",
    "email": "chatoo2412@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chatoo2412/vscode-git-tracked-explorer.git"
  },
  "bugs": {
    "url": "https://github.com/chatoo2412/vscode-git-tracked-explorer/issues"
  },
  "homepage": "https://github.com/chatoo2412/vscode-git-tracked-explorer#readme",
  "keywords": [
    "git",
    "explorer",
    "tracked",
    "files",
    "tree-view"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Git Tracked Explorer",
      "properties": {
        "gitTracked.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable hiding of untracked files in the explorer."
        }
      }
    },
    "commands": [
      {
        "command": "gitTrackedExplorer.refresh",
        "title": "Refresh Git Tracked Files",
        "icon": "$(refresh)"
      },
      {
        "command": "gitTrackedExplorer.openFile",
        "title": "Open File"
      },
      {
        "command": "gitTracked.toggle",
        "title": "Toggle Git Tracked Files Only"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitTrackedExplorer.refresh",
          "when": "view == gitTrackedExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
